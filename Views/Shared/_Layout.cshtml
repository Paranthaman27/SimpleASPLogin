@{
    var role = ViewBag.Role;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SimpleASPLogin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/notification/ikr.notification.css" />

    @RenderSection("Styles", required: false)
</head>
<body>
    @if (role == null)
    {
        <style>
            .navbar{
                background-color:blueviolet;
                color:white;
            }
            .navbar a {
                display: block;
                color: white;
                background-color: blueviolet;
                padding: 16px;
                text-decoration: none;
                text-align: center;
            }
                .navbar a:hover {
                    background-color: white;
                    color: blueviolet;
                }
        </style>
        <nav class="navbar navbar-expand-md navbar-toggleable-md md-2">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="User" asp-action="Register">Register</a>
                        </li>
                </ul>
            </div>
        </nav>
        <main role="main">
            @RenderBody()
        </main>

    }
    else if (role.Equals("Driver"))
    {
        <style>
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 0;
            }

            .navbar {
                width: 200px;
                position: fixed;
                display: flex;
                flex-wrap: wrap;
                flex-direction: row;
                justify-content: center;
                align-content: flex-start;
                top: 0;
                left: 0;
                height: 100%;
                background-color: blueviolet;
                padding-top: 5px;
                color: white;
            }

                .navbar a {
                    display: block;
                    color: white;
                    padding: 16px;
                    text-decoration: none;
                    text-align: center;
                }

                    .navbar a:hover {
                        background-color: white;
                        color: blueviolet;
                    }

            .main-content {
                margin-left: 220px;
                padding: 20px;
            }

            .profile {
                text-align: center;
                margin-bottom: 20px;
            }

                .profile img {
                    align-items: center;
                    width: 100px;
                    height: 100px;
                    border-radius: 50%;
                }

                .profile p {
                    color: white;
                    margin-top: 10px;
                }
        </style>
        <aside class="navbar">
            <center>
                <div class="profile">
                    <img src="/Img/profile_01.png" alt="Profile Image">
                    @*<p>@email</p>*@
                </div>
            </center>
            <a asp-action="EnterRental">Enter Rental Details</a>
            <a asp-action="RentalHistory">Rental History</a>
            <a asp-controller="Driver" asp-action="Edit" asp-route-Email="Email">Edit Details</a>
            <a asp-action="SalaryHistory">View Salary History</a>
            <a asp-controller="Notifications" asp-action="Index" data-toggle="dropdown">
                <i class="fas fa-bell"></i>
                <span class="badge badge-pill badge-warning"></span>
            </a>
            <a asp-area="" asp-controller="User" asp-action="Logout">LogOut</a>
        </aside>

        <div class="main-content">
            <main role="main">
                @RenderBody()
            </main>
        </div>

    }

    else if (role.Equals("Admin"))
    {
        <style>
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 0;
            }

            .navbar {
                width: 200px;
                position: fixed;
                display: flex;
                flex-wrap: wrap;
                flex-direction: row;
                justify-content: center;
                align-content: flex-start;
                top: 0;
                left: 0;
                height: 100%;
                background-color: blueviolet;
                padding-top: 5px;
                color: white;
            }

                .navbar a {
                    display: block;
                    color: white;
                    padding: 16px;
                    text-decoration: none;
                    text-align: center;
                }

                    .navbar a:hover {
                        background-color: white;
                        color: blueviolet;
                    }

            .main-content {
                margin-left: 220px;
                padding: 20px;
            }

            .profile {
                text-align: center;
                margin-bottom: 20px;
            }

                .profile img {
                    align-items: center;
                    width: 100px;
                    height: 100px;
                    border-radius: 50%;
                }

                .profile p {
                    color: white;
                    margin-top: 10px;
                }
        </style>
        <aside class="navbar">
            <center>
                <div class="profile">
                    <img src="/Img/man.png" alt="Profile Image">
                    @*<p>@email</p>*@
                </div>
            </center>
            <a asp-controller="Driver" asp-action="DIndex">View Drivers</a>
            <a asp-action="RentalHistory">Rental History</a>
            <a asp-controller="Vehicle" asp-action="VIndex">View Vehicles</a>
            <a asp-controller="Driver" asp-action="SalaryHistory">View Salary History</a>
            <a asp-controller="Notifications" asp-action="Index" data-toggle="dropdown">
                <i class="fas fa-bell"></i>
                <span class="badge badge-pill badge-warning"></span>
            </a>
            <a asp-area="" asp-controller="User" asp-action="Logout">LogOut</a>
        </aside>

        <div class="main-content">
            <main role="main">
                @RenderBody()
            </main>
        </div>

    }



    else if (role != null)
    {
        <nav class="navbar navbar-expand-md navbar-toggleable-md md-2" style="background-color: blueviolet; color:white;">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Notifications" asp-action="Index" data-toggle="dropdown">
                            <i class="fas fa-bell"></i>
                            <span class="badge badge-pill badge-warning"></span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Booking" asp-action="Booking">Booking</a>
                    </li>
                    <li>
                        <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Logout">LogOut</a>
                    </li>
                 </ul>
            </div>
        </nav>
        <main role="main">
            @RenderBody()
        </main>

    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src ="~/lib/notification/ikr.notificationPligin.js"></script>
    <script type="text/javascript">(function () {
            if (window.history && window.history.pushState) {
                window.history.pushState(null, null, document.URL);
                window.addEventListener('popstate', function () {
                    if (document.referrer.indexOf('/User/Login') === -1 || document.referrer.indexOf('/User/Register') !== -1) {
                        window.location.replace('/User/Login');
                    } else {
                        window.history.pushState(null, null, document.URL);
                    }
                });
            }
        })();</script>



    @RenderSection("Scripts", required: false)
</body>
</html>




