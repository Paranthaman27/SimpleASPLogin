@model IEnumerable<SimpleASPLogin.Models.Rental>

@{
    ViewData["Title"] = "Salary History";
}

<h2>Salary History</h2>

<p>Total Amount: @ViewBag.TotalAmount</p>
<p>Salary: @ViewBag.Salary</p>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Company Name</th>
            <th>Vehicle ID</th>
            <th>From</th>
            <th>To</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rental in Model)
        {
            <tr>
                <td>@rental.Date.ToShortDateString()</td>
                <td>@rental.CompanyName</td>
                <td>@rental.VehicleId</td>
                <td>@rental.From</td>
                <td>@rental.To</td>
                <td>@rental.Amount</td>
            </tr>
        }
    </tbody>
</table>
