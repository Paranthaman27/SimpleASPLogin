    <h1>Delete Driver</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Driver Details</h4>
        <hr />

        <form asp-action="Delete">
            <input type="hidden" asp-for="DriverEmail" />
            <div class="form-group">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.D_Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.D_Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.D_Pno)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.D_Pno)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DAddress)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DAddress)
                    </dd>
                </dl>
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="DIndex" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

