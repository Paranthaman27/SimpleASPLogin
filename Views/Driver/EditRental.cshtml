@model SimpleASPLogin.Models.Rental

@{
    ViewData["Title"] = "Edit Rental Details";
}

<h2>Edit Rental Details</h2>

<form asp-action="EditRental">
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsGST"></label>
        <input asp-for="IsGST" class="form-control" type="checkbox" />
        <span asp-validation-for="IsGST" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CompanyName"></label>
        <input asp-for="CompanyName" class="form-control" />
        <span asp-validation-for="CompanyName" class="text-danger"></span>
    </div>
    @if (Model.IsGST)
    {
        <div class="form-group">
            <label asp-for="CompanyId">Select Company</label>
            <select asp-for="CompanyId" class="form-control" asp-items="@(new SelectList(ViewBag.Companies, "CompanyId", "CompanyName"))"></select>
            <span asp-validation-for="CompanyId" class="text-danger"></span>
        </div>
    }
    <div class="form-group">
        <label asp-for="VehicleId">Select Vehicle</label>
        <select asp-for="VehicleId" class="form-control" asp-items="@(new SelectList(ViewBag.Vehicles, "VehicleId", "VehicleName"))"></select>
        <span asp-validation-for="VehicleId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="From"></label>
        <input asp-for="From" class="form-control" />
        <span asp-validation-for="From" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="To"></label>
        <input asp-for="To" class="form-control" />
        <span asp-validation-for="To" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartKm"></label>
        <input asp-for="StartKm" class="form-control" />
        <span asp-validation-for="StartKm" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndKm"></label>
        <input asp-for="EndKm" class="form-control" />
        <span asp-validation-for="EndKm" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DieselCost"></label>
        <input asp-for="DieselCost" class="form-control" />
        <span asp-validation-for="DieselCost" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
