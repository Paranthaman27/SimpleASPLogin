                        </div>
                    }
                </div>
            </div>

            <div class="col-md-10" id="read" style="display: block;">
                <h4>Read Notifications</h4>
                <div id="readNotifications">
                    @foreach (var notification in Model.ReadNotifications)
                    {
                        <div class="row justify-content-center">
                            <div class="notification-message" data-id="@notification.NotiId">
                                <div class="col-md-2"><h4>@notification.NotiHeader</h4></div>
                                <div class="col-md-10"><p>@notification.NotiBody</p><p>@notification.FromUserEmail</p></div>
                            </div>
                        </div>
                        
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- The Modal -->
    <div id="myModal" class="modal" id="markAsReadButton">
        <!-- Modal content -->
        <div class="modal-content">
            <span class="close">&times;</span>
            <h4 id="popupHeader"></h4>
            <p id="popupBody"></p>
            @*<button id="markAsReadButton">Mark as Read</button>*@
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/notification/ikr.notificationPlugin.js"></script>
    <script>function openunreadmsg() {
            document.getElementById("unread").style.display = "block";
            document.getElementById("read").style.display = "none";
        }

        function openreadmsg() {
            document.getElementById("read").style.display = "block";
            document.getElementById("unread").style.display = "none";
        }

        document.addEventListener('DOMContentLoaded', function () {
            var messages = document.querySelectorAll('.notification-message');

            messages.forEach(function (message) {
                message.addEventListener('click', function () {
                    var id = message.getAttribute('data-id');
                    var header = message.querySelector('h4').textContent;
                    var body = message.querySelector('p').textContent;

                    document.getElementById('popupHeader').textContent = header;
                    document.getElementById('popupBody').textContent = body;
                    document.getElementById('myModal').style.display = 'block';

                    document.getElementById('markAsReadButton').onclick = function () {
                        markAsRead(id);
                    };
                });
            });

            var modal = document.getElementById("myModal");
            var span = document.getElementsByClassName("close")[0];

            span.onclick = function () {
                modal.style.display = "none";
            }

            window.onclick = function (event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            }
        });

        function markAsRead(id) {
            fetch(`/Notifications/MarkAsRead/${id}`, { method: 'POST' })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    }
                });
        }</script>

    @*@RenderSection("Scripts", required: false)*@
</body>
