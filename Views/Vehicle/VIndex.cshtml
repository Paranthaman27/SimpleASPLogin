@model IEnumerable<SimpleASPLogin.Models.Vehicle>
@{
    ViewData["Title"] = "Vehicle";
    var role = ViewBag.Role;
}

<div class="container">
    <h1>Vehicle</h1>
    @if (role.Equals("Admin"))
        {
        <p>
            <a asp-action="Create" asp-controller="Vehicle" class="btn btn-primary">Create New</a>
        </p>
        }
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            Vehicle Name
                        </th>
                        <th>
                            Vehicle Register No
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Vehicle_Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Vehicle_Reg)
                            </td>
                            @if (role.Equals("Admin"))
                                {
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Vehicle_id" id="Edit" class="btn btn-primary" style="display: block;">Edit</a>
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@item.Vehicle_id" id=" Delete" class="btn btn-danger" style="display: block;">Delete</a>
                                </td>
                                }

                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}