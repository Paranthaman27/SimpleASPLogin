@model SimpleASPLogin.Models.Vehicle

@{
    ViewData["Title"] = "Delete Vehicle";
}
<div class="container">
    <h1>Delete Vehicle</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Vehicle</h4>
        <hr />

        <form asp-action="Delete">
            <input type="hidden" asp-for="Vehicle_id" />
            <div class="form-group">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Vehicle_Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Vehicle_Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Vehicle_Reg)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Vehicle_Reg)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Vehicle_Type)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Vehicle_Type)
                    </dd>
                </dl>
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="VIndex" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>